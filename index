    <script>
        const quotations = [
            { text: "领导我们事业的核心力量是中国共产党。指导我们思想的理论基础是马克思列宁主义。", source: "《中华人民共和国第一届全国人民代表大会第一次会议开幕词》" },
            { text: "人民、只有人民，才是创造世界历史的动力。", source: "《论联合政府》" },
            { text: "星星之火，可以燎原。", source: "《星星之火，可以燎原》" },
            { text: "为人民服务。", source: "《为人民服务》" },
            { text: "我们应当相信群众，我们应当相信党，这是两条根本的原理。如果怀疑这两条原理，那就什么事情也做不成了。", source: "《关于农业合作化问题》" },
            { text: "政策和策略是党的生命，各级领导同志务必充分注意，万万不可粗心大意。", source: "《关于情况的通报》" },
            { text: "世界上怕就怕‘认真’二字，共产党就最讲‘认真’。", source: "在莫斯科会见我国留学生和实习生时的谈话" },
            { text: "前途是光明的，道路是曲折的。", source: "《关于重庆谈判》" },
            { text: "帝国主义者和国内反动派决不甘心于他们的失败，他们还要作最后的挣扎。在全国平定以后，他们也还会以各种方式从事破坏和捣乱，他们将每日每时企图在中国复辟。这是必然的，毫无疑义的，我们务必不要松懈自己的警惕性。", source: "在中国人民政治协商会议第一届全体会议上的开幕词" },
            { text: "我们中华民族有同自己的敌人血战到底的气概。有在自力更生的基础上光复旧物的决心，有自立于世界民族之林的能力。", source: "《论反对日本帝国主义的策略》" }
        ];

        let currentQuoteIndex = 0;
        let currentCharIndex = 0;
        const typedTextElement = document.getElementById('typedText');
        const sourceAreaElement = document.getElementById('sourceArea');
        const cursorElement = document.getElementById('cursor');
        const typingSpeed = 120; // Milliseconds per character
        const pauseBetweenQuotes = 3000; // Milliseconds pause

        function typeWriter() {
            if (currentQuoteIndex < quotations.length) {
                const currentQuote = quotations[currentQuoteIndex].text;
                const currentSource = quotations[currentQuoteIndex].source;
                sourceAreaElement.textContent = ""; // Clear source initially

                if (currentCharIndex < currentQuote.length) {
                    typedTextElement.textContent += currentQuote.charAt(currentCharIndex);
                    currentCharIndex++;
                    setTimeout(typeWriter, typingSpeed);
                } else {
                    // Finished typing current quote
                    sourceAreaElement.textContent = "—— " + currentSource;
                    cursorElement.style.display = 'none'; // Hide cursor when quote finished
                    setTimeout(() => {
                        currentQuoteIndex++;
                        currentCharIndex = 0;
                        typedTextElement.textContent = ''; // Clear for next quote
                        sourceAreaElement.textContent = '';
                        cursorElement.style.display = 'inline-block'; // Show cursor for next quote
                        typeWriter(); // Start next quote
                    }, pauseBetweenQuotes);
                }
            } else {
                // All quotes displayed, loop back or stop
                currentQuoteIndex = 0; // Loop
                typedTextElement.textContent = '语录展示完毕，循环播放...';
                 sourceAreaElement.textContent = '';
                setTimeout(() => {
                    typedTextElement.textContent = '';
                    typeWriter();
                }, pauseBetweenQuotes);
            }
        }

        const backgroundMusic = document.getElementById('backgroundMusic');
        const loopStatusElement = document.getElementById('loopStatus');

        function playAudio() {
            backgroundMusic.play().catch(error => {
                console.log("Autoplay prevented: ", error);
                // alert("浏览器阻止了自动播放。请点击播放按钮。");
            });
        }

        function pauseAudio() {
            backgroundMusic.pause();
        }
        
        function toggleLoop() {
            backgroundMusic.loop = !backgroundMusic.loop;
            loopStatusElement.textContent = "循环: " + (backgroundMusic.loop ? "开" : "关");
        }

        // Attempt to play music after a small delay or user interaction
        // Browsers often block autoplay unless there's user interaction.
        // You might want to tie playAudio() to a button click if autoplay is an issue.
        document.addEventListener('DOMContentLoaded', () => {
            typeWriter(); // Start typing animation
             playAudio(); // Attempt autoplay - might be blocked
        });

    </script>
</body>
